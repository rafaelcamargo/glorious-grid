@require 'var'
@require 'func'

.cp-note
  position relative
  padding 10px 10px 10px 50px
  font-size 0.875em
  border 1px solid $color-grey-light
  border-left 5px solid $color-grey-light
  border-radius(3px)
  &:before
    position absolute
    top 10px
    left 5px
    content 'note'
    color $color-grey
    text-transform uppercase
