@require 'var'
@require 'func'

.cp-menu-container
  position absolute
  bottom 0
  width 100%

.cp-menu
  margin 0 auto
  padding 15px 0
  width 100%
  max-width 450px
  list-style-type none
  clearfix()
  li
    position relative
    float left
    width 25%
    text-align center
    text-transform capitalize
  a, a:visited, a:focus, a:hover, a:active
    display block
    padding 25px 0
    color $color-white
    text-decoration none
  [class^="icon-"]:before, [class*=" icon-"]:before
    position absolute
    top 0
    left 50%
    margin-left -12px
    width 24px
    height 24px
    color $color-white
    font-size 16px
