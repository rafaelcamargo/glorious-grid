@require 'var'
@require 'func'

body
  background-color $color-primary
  font-size 16px

body, h1, h2, h3, h4, h5, h6, p, ul, li, pre
  margin 0
  padding 0
  color $color-grey-dark
  font-family $font-family
  font-weight 300
  
p
  font-size 1em
  line-height 1.5
  
h1, h2, h3, h4, h5, h6
  font-weight 300
  
h1
  font-size 2.25em

h2
  font-size 1.5em
  
h3
  font-size 1.125em
  
h4
  font-size 1em
  
h5
  font-size 0.875em
  
h6
  font-size 0.75em
  
code
  display block
  padding 13px
  background-color $color-grey-light
  font-size 0.75em
  text-align left
