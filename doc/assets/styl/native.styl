@require 'var'
@require 'func'

body
  background-color $color-primary
  font-size 16px

body, h1, h2, h3, h4, h5, h6, p, ul, li, pre
  position relative
  margin 0
  padding 0
  color $color-grey-dark
  font-family $font-family
  font-weight 300
  
p
  font-size 1em
  line-height 1.5
  
h1, h2, h3, h4, h5, h6
  font-weight 300
  
h1
  font-size 4.5em

h2
  font-size 2.25em
  
h3
  font-size 1.5em
  
h4
  font-size 1.125em
  
h5
  font-size 1em
  
h6
  font-size 0.875em
  
a, a:visited, a:focus, a:hover, a:active
  padding 2px 0
  color $color-primary
  text-decoration none
  border-bottom 1px solid $color-primary
  
code
  display block
  padding 13px
  background-color $color-grey-light
  font-size 0.75em
  text-align left
